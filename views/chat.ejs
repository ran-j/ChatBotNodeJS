<!DOCTYPE html>
<html>

<head>
    <%- include('./Fixed/Header.ejs'); %>
    <style>
        .container-fluid {
            margin-right: auto;
            margin-left: auto;
            padding-left: 15px;
            padding-right: 15px;
        }

        .menssages-board-user {
            height: 10%;
            /* overflow-y: scroll; */
            overflow-x: hidden;
        }

        .nopadding {
            padding: 0 !important;
        }

        .cel{
            height: 85vw;
        }
        .pc{
            height: 80vh;
        }

        html,
        body {
            background: #333;
        }
    </style>
 

<body class="skin-black">
    <div class="col-md-2"></div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8" style="padding-top: 35px;">
                <div class="menssages-board-user nopadding col-md-12 height-msg-board">
                    <div class="box box-success">
                        <div class="box-header">
                            <h3 class="box-title">
                                <i class="fa fa-comments-o"></i> Chat</h3>
                        </div>

                        <div class="box-body chat" id="chat-box" style="overflow-x: hidden;overflow-y: scroll;">
                        </div>
                        <!-- /.chat -->

                        <div class="box-footer">
                            <div class="input-group">
                                <input class="form-control" id="m" placeholder="Digite a sua mensagem..." />
                                <div class="input-group-btn">
                                    <button class="btn btn-success" id="btnsend">
                                        <i class="fa fa-location-arrow"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box (chat box) -->
                </div>
                <!-- /.col -->
            </div>

        </div>
    </div>

</body>
<!-- jQuery 2.0.2 -->
<script src="/required/js/jquery.min.js" type="text/javascript"></script>
<script>
    $(function () {
        if ((navigator.userAgent.match(/iPhone/i)) || (navigator.userAgent.match(/iPod/i)) || (navigator.userAgent.match(/android/i)) ) {
            $("#chat-box").addClass( "cel" );
        }else{
            $("#chat-box").addClass( "pc" );
        }

        var userid = Math.random().toString(36).substring(1);
        const messages = document.getElementById('chat-box'); 
        $('input').on("keypress", function (e) {
            /* ENTER PRESSED*/
            if (e.keyCode == 13) {
                send();
                return false;
            }
        });

        $('#btnsend').click(function () {
            send();
        });

        function send() {
            if ($('#m').val().length > 0) {                             
                
                var d = new Date();
                var n = d.getHours();
                var m = d.getMinutes();
                var hora = n + ":" + m;

                $('#chat-box').append('<div class="item"><img src="img/user.png" alt="user image" class="online"/><p class="message"><a href="#" class="name"><small class="text-muted pull-right"><i class="fa fa-clock-o"></i>' + hora + '</small> You</a>' + $('#m').val() + '</p></div>');
                messages.scrollTop = messages.scrollHeight;

                $.post("/api/ask", {
                    uID: userid,
                    say: $('#m').val()
                },
                    function (result, response) {
                        console.log(result)
                        if (result != null) {                            
                            $('#chat-box').append('<div class="item"><img src="img/bot1.png" alt="user image" class="online" /><p class="message"><a href="#" class="name"><small class="text-muted pull-right"><i class="fa fa-clock-o"></i>' + hora + '</small> BotJs </a>' + result.response + '</p></div>');
                            messages.scrollTop = messages.scrollHeight;
                        }
                    });
                $('#m').val('');
            }
        }
    });
</script>

</html>